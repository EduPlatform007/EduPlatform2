        document.addEventListener('DOMContentLoaded', function() {

            const themeSwitch = document.getElementById('theme-switch');
            const themeIcon = document.getElementById('theme-icon');

            const currentTheme = localStorage.getItem('theme') || 'light';
            document.documentElement.setAttribute('data-theme', currentTheme);

            if (currentTheme === 'dark') {
                themeIcon.classList.remove('fa-moon');
                themeIcon.classList.add('fa-sun');
            }

            themeSwitch.addEventListener('click', function() {
                let theme = 'light';

                if (document.documentElement.getAttribute('data-theme') === 'light') {
                    document.documentElement.setAttribute('data-theme', 'dark');
                    theme = 'dark';
                    themeIcon.classList.remove('fa-moon');
                    themeIcon.classList.add('fa-sun');
                } else {
                    document.documentElement.setAttribute('data-theme', 'light');
                    themeIcon.classList.remove('fa-sun');
                    themeIcon.classList.add('fa-moon');
                }
 
                localStorage.setItem('theme', theme);
            });

            function updateLanguage(lang) {

                document.documentElement.setAttribute('lang', lang);

                const elements = document.querySelectorAll('[data-lang-key]');
                elements.forEach(element => {
                    const key = element.getAttribute('data-lang-key');
                    if (translations[lang] && translations[lang][key]) {
                        element.innerHTML = translations[lang][key];
                    }
                });

                const userData = JSON.parse(localStorage.getItem('currentUser') || '{}');
                userData.language = lang;
                localStorage.setItem('currentUser', JSON.stringify(userData));
            }

            const langSelect = document.getElementById('select');
            langSelect.addEventListener('change', function() {
                const lang = this.value === 'Қазақша' ? 'kk' : 'ru';
                updateLanguage(lang);
            });

            firebase.auth().onAuthStateChanged(user => {
                const btnLog = document.getElementById('btn-log');
                const btnProfile = document.querySelector('.user-profile-btn');
                
                if (user) {

                    console.log('Пользователь авторизован:', user.email);

                    const userData = JSON.parse(localStorage.getItem('currentUser') || '{}');

                    btnLog.style.display = 'none';
                    btnProfile.style.display = 'inline-block';

                    if (userData.language) {
                        langSelect.value = userData.language === 'kk' ? 'Қазақша' : 'Русский';
                        updateLanguage(userData.language);
                    }
                } else {

                    console.log('Пользователь не авторизован');
                    
                    btnLog.style.display = 'inline-block';
                    btnProfile.style.display = 'none';
                    

                    updateLanguage('kk');
                }
            });
            
   
            const questions = document.querySelectorAll('.question');
            
            questions.forEach(question => {
                const questionHeader = question.querySelector('.quest-only-up');
                const answer = question.querySelector('.answer');
                
                questionHeader.addEventListener('click', function(e) {
                    e.preventDefault();
                    

                    question.classList.toggle('active');
                    

                    if (question.classList.contains('active')) {
                        answer.style.display = 'block';
                        answer.style.animation = 'fadeIn 0.3s ease';
                    } else {
                        answer.style.animation = 'fadeOut 0.3s ease';
                        setTimeout(() => {
                            answer.style.display = 'none';
                        }, 300);
                    }
                });
            });

            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    const targetId = this.getAttribute('href');
                    const targetElement = document.querySelector(targetId);
                    
                    if (targetElement) {
                        window.scrollTo({
                            top: targetElement.offsetTop,
                            behavior: 'smooth'
                        });
                    }
                });
            });

            const sections = [
                '.main-frame', 
                '.second-frame', 
                '.third-frame', 
                '.four-frame', 
                '.five-frame', 
                '.six-frame', 
                '.seven-frame'
            ];
            
            sections.forEach(selector => {
                const section = document.querySelector(selector);
                if (section) {
                    section.classList.add('animated');
                }
            });
            
            function ensureCardsVisible() {
                const courseCardsContainer = document.querySelector('.carts');
                if (courseCardsContainer) {
                    courseCardsContainer.style.display = 'flex';
                    courseCardsContainer.style.opacity = '1';
                    courseCardsContainer.style.visibility = 'visible';
                    
                    const courseCards = courseCardsContainer.querySelectorAll('.first-carts, .second-carts, .third-carts');
                    courseCards.forEach(card => {
                        card.style.display = 'flex';
                        card.style.opacity = '1';
                        card.style.visibility = 'visible';

                        if (card.style.transform) {
                            card.style.removeProperty('transform');
                        }
                    });
                }
 
   
                const teacherCardsContainer = document.querySelector('.teachers-carts');
                if (teacherCardsContainer) {
                    teacherCardsContainer.style.display = 'flex';
                    teacherCardsContainer.style.opacity = '1';
                    teacherCardsContainer.style.visibility = 'visible';
                    
           
                    const teacherCards = teacherCardsContainer.querySelectorAll('.teacher');
                    teacherCards.forEach(card => {
                        card.style.display = 'flex';
                        card.style.opacity = '1';
                        card.style.visibility = 'visible';
                        if (card.style.transform) {
                            card.style.removeProperty('transform');
                        }
                    });
                }
            }
            ensureCardsVisible();
            setTimeout(ensureCardsVisible, 500);
            document.querySelectorAll('.student').forEach(student => {
                student.style.height = 'auto';
                student.style.overflow = 'visible';
            });
            
            document.querySelectorAll('.text-student').forEach(text => {
                text.style.overflow = 'visible';
                text.style.maxHeight = 'none';
            });
        });
        
        window.addEventListener('load', function() {
            if (typeof ensureCardsVisible === 'function') {
                ensureCardsVisible();
            } else {

                function ensureCardsVisible() {
                    const courseCardsContainer = document.querySelector('.carts');
                    if (courseCardsContainer) {
                        courseCardsContainer.style.display = 'flex';
                        courseCardsContainer.style.opacity = '1';
                        courseCardsContainer.style.visibility = 'visible';
                        
                        const courseCards = courseCardsContainer.querySelectorAll('.first-carts, .second-carts, .third-carts');
                        courseCards.forEach(card => {
                            card.style.display = 'flex';
                            card.style.opacity = '1';
                            card.style.visibility = 'visible';
                            // Удаляем инлайн-стиль transform, чтобы CSS hover мог работать
                            if (card.style.transform) {
                                card.style.removeProperty('transform');
                            }
                        });
                    }
                    
                    const teacherCardsContainer = document.querySelector('.teachers-carts');
                    if (teacherCardsContainer) {
                        teacherCardsContainer.style.display = 'flex';
                        teacherCardsContainer.style.opacity = '1';
                        teacherCardsContainer.style.visibility = 'visible';
                        
                        const teacherCards = teacherCardsContainer.querySelectorAll('.teacher');
                        teacherCards.forEach(card => {
                            card.style.display = 'flex';
                            card.style.opacity = '1';
                            card.style.visibility = 'visible';
                            // Удаляем инлайн-стиль transform, чтобы CSS hover мог работать
                            if (card.style.transform) {
                                card.style.removeProperty('transform');
                            }
                        });
                    }
                }
                
                ensureCardsVisible();
            }
        });
    </script>
</body>
<script>
    document.addEventListener('DOMContentLoaded', function() {

        function forceHoverEffects() {

            const styleSheet = document.createElement('style');
            styleSheet.innerHTML = `
                .teacher, .first-carts, .second-carts, .third-carts {
                    transform: scale(1) !important;
                    transition: transform 0.5s ease, box-shadow 0.5s ease !important;
                }
                
                .teacher:hover, .first-carts:hover, .second-carts:hover, .third-carts:hover {
                    transform: scale(1.05) !important;
                    box-shadow: 0 10px 40px rgba(0,0,0,0.15) !important;
                }
                
                .link-cart:hover, .lin-cart:hover {
                    transform: scale(1.05) !important;
                }
            `;
            document.head.appendChild(styleSheet);
            

            const elements = document.querySelectorAll('.teacher, .first-carts, .second-carts, .third-carts, .link-cart, .lin-cart');
            elements.forEach(element => {
                if (element.style.transform) {
                    element.style.removeProperty('transform');
                }
            });
            

            const teachers = document.querySelectorAll('.teacher');
            teachers.forEach(teacher => {
                teacher.addEventListener('mouseenter', function() {
                    this.style.transform = 'scale(1.05)';
                    this.style.boxShadow = '0 10px 40px rgba(0,0,0,0.15)';
                });
                
                teacher.addEventListener('mouseleave', function() {
                    this.style.transform = 'scale(1)';
                    this.style.boxShadow = '0 5px 15px rgba(0,0,0,0.1)';
                });
            });
        }
        
        forceHoverEffects();
   
        setTimeout(forceHoverEffects, 1000);

        window.addEventListener('load', forceHoverEffects);
    });
</script>
</html>
